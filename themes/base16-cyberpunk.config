! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #2b2b2b, #2b2b2b, #000000

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #2b2b2b, #dcdccc, #2b2b2b, #2b2b2b, #ffffff
rofi.color-active:  #2b2b2b, #4c83ff, #2b2b2b, #2b2b2b, #4c83ff
rofi.color-urgent:  #2b2b2b, #ff0000, #2b2b2b, #2b2b2b, #ff0000

! Set the desired separator style
rofi.separator-style: solid
