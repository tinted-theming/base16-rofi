! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #333333, #333333, #000000

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #333333, #aaaaaa, #333333, #333333, #ffffff
rofi.color-active:  #333333, #5555ff, #333333, #333333, #5555ff
rofi.color-urgent:  #333333, #aa0000, #333333, #333333, #aa0000

! Set the desired separator style
rofi.separator-style: solid
