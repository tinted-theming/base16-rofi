! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #1d1c19, #1d1c19, #0d0c0c

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #1d1c19, #c5c9c5, #1d1c19, #1d1c19, #c5c9c5
rofi.color-active:  #1d1c19, #8ba4b0, #1d1c19, #1d1c19, #8ba4b0
rofi.color-urgent:  #1d1c19, #c4746e, #1d1c19, #1d1c19, #c4746e

! Set the desired separator style
rofi.separator-style: solid
